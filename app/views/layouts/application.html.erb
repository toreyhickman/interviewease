<!DOCTYPE html>
<html>
<head>
  <title>PairingRoulette</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.email %> | <%= link_to "Logout", logout_path, method: :delete %>
  <% end %>
</div>


<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>

<%= yield %>

</body>
</html>
