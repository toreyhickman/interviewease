
<h2>Employees: sign in here</h2>
<%= form_tag ({controller: "employees", action: "login"}) do %>

<%= label_tag(:email, "Email: ") %><br><br>
<%= text_field_tag(:email) %><br><br>
<%= label_tag(:password, "Password: ") %><br><br>
<%= text_field_tag(:password) %><br><br>
<%= submit_tag "Submit" %><br><br>

<% end %>
