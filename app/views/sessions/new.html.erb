
<h2>Employees: sign in here</h2>
<%= form_tag ({controller: "sessions", action: "create"}) do %>

<%= label_tag(:email, "Email: ") %>
<%= text_field_tag(:email) %><br><br>
<%= label_tag(:password, "Password: ") %>
<%= password_field_tag(:password) %><br><br>
<%= submit_tag "Submit" %><br><br>

<% end %>
<p>-----------</p>
<h2>Register your company here:</h2>

<%= form_tag ({controller: "companies", action: "create"}) do %>

  <%= label_tag(:name, "Company Name: ") %>
  <%= text_field_tag(:name) %><br><br>
  <%= fields_for Employee.new do |employee| %>
    <%= employee.label(:name, "Enter your name.") %>
    <%= employee.text_field(:name) %><br><br>
    <%= employee.label(:email, "Enter your email.") %>
    <%= employee.text_field(:email) %><br><br>
    <%= employee.label(:password, "Enter your password.") %>
    <%= employee.password_field(:password) %><br><br>
  <% end %>
  
  <%= submit_tag "Submit" %><br><br>

<% end %>

<h2>Check in for your interview.</h2>
<%= form_tag checkins_path do %>
  <%= label_tag(:identifier, "Type in your interview code here.") %>
  <%= text_field_tag(:identifier) %>
  <%= submit_tag "Submit" %>
<% end %>
