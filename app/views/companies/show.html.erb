<h1>Show Company</h1>
// avoid multiple <h1> elements
<h1><%= @company.name %></h1>

<div id="employees">
  <h2>CRUD Employees</h2>
  <%= link_to "Add Employee", new_employee_path %>
  <ul>
    <% @company.employees.each do |employee| %>
      <h3><%= employee.name %></h3>
      <li><%= link_to "View Employee", employee %></li>
      <li><%= link_to "Edit Employee", edit_employee_path(employee.id) %></li>
      <li><%= link_to "Delete Employee", employee, method: :delete %></li>
    <% end %>
  </ul>

</div>


