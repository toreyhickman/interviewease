<small>:: Employees/<%= link_to "#{@employee.company.name}", @employee.company %>/<%= @employee.name %></small>

<h1><%= @employee.name ? @employee.name : @employee.email %></h1>

<% if current_user.id == @employee.id %>
<%= link_to "edit profile", edit_employee_path(@employee.id) %> | <%= link_to "delete account", @employee, method: :delete %>
<% end %>

<h2>Scheduled Interviews</h2>
<% @interviews.each do |interview| %>
  <p><%= link_to interview.candidate.name, interview %></p>
  <p>
    <small>
      <% if interview.start %>
        <p><%= "Scheduled for #{interview.start}" %></p>
      <% end %>
    </small>
  </p>
<% end %>

<h2>Create New Interview</h2>
<%= form_for Candidate.new do |f| %>
  <%= f.label(:name, "Who will you be interviewing?") %>
  <%= f.text_field :name %>
  <br>
  <%= f.label(:email, "If you know their e-mail, enter it here.") %>
  <%= f.text_field :email %>
  <br>
  <%= f.submit %>
<% end %>
