<small>:: <%= current_user.company.name %>/New Employee</small>

<h1>New Employee</h1>

<%= form_for @employee, url: {action: "create"} do |f| %>

  <%= f.label "Name: " %> <%= f.text_field (:name) %><br><br>  
  <%= f.label "Email Address: " %> <%= f.text_field (:email) %><br><br>
  <%= f.label "Password: " %> <%= f.password_field (:password), value: "" %><br><br>
  <%= f.submit "Add Employee" %><br><br>

<% end %>
